
  ! DISTANCE
  r2 = MERVIN_D0_dp
  call constraint_point_define( atom_selection( atom_number = (/ MERVIN_A1 /) ) )
  call constraint_point_define( atom_selection( atom_number = (/ MERVIN_A2 /) ) )
  call constraint_define( type = "DISTANCE", &
                          fc = MERVIN_FC._dp, &
                          eq = r2)
