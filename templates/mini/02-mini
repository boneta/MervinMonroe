
  call mopac_setup ( &
    method    = 'MERVIN_METHOD', &
    charge    =  qm_charge, &
    selection = acs )
  call mopac_scf_options ( iterations = 500000 )


  acs = .false.
  call my_sele( acs )
  call atoms_fix( .not. acs )

  call energy_initialize

  !Initialize the non-bonding list cutoff options
  call energy_non_bonding_options( &
    list_cutoff   = 18.0_dp, &
    outer_cutoff  = 16.0_dp, &
    inner_cutoff  = 14.5_dp, &
    minimum_image = .false. )     ! PBC


  !Calculate the gradient
  call gradient
  do g = 1, 1000
    if( grms < 40._dp ) cycle
    atmcrd = atmcrd - atmder / dsqrt( sum( atmder **2 ) ) * 0.01_dp
    call gradient
  end do


  ! Minimize Conjugate-Gradient method
  call optimize_conjugate_gradient ( &
    step_number = MERVIN_CG_STEPS, &
    print_frequency = 5, &
    gradient_tolerance = MERVIN_CG_TOLERANCE_dp )

  ! Minimize L-BFGS-B
  call optimize_lbfgsb( &
    step_number = MERVIN_LBFGSB_STEPS, &
    print_frequency = 1, &
    gradient_tolerance = MERVIN_LBFGSB_TOLERANCE_dp )

  ! Write results
  call coordinates_write( "MERVIN_COORD_OUT.crd" )
  call pdb_write( "MERVIN_COORD_OUT.pdb" )

  deallocate( acs )

end

include 'nofix.f90'
